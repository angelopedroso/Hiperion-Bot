{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@modules/*": ["bot/modules/*"],
      "@utils/*": ["bot/utils/*"],
      "@cli/*": ["bot/cli/*"],
      "@helpers/*": ["bot/helpers/*"],
      "@typings/*": ["bot/typings/*"],
      "@lib/*": ["bot/lib/*"],
      "@api/*": ["bot/api/*"],
      "@assets/*": ["../assets/*"],
      "@locales/*": ["../locales/*"]
    }
  },
  "exclude": ["node_modules", "dist", "__tests__"],
  "include": ["index.ts", "src/**/*.ts"]
}
